#!/usr/bin/make -f

DEB_PYTHON_SYSTEM=pysupport
DEB_COMPRESS_EXCLUDE= .js .inv

include /usr/share/cdbs/1/rules/buildcore.mk
include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/python-distutils.mk
include /usr/share/cdbs/1/rules/patchsys-quilt.mk

binary-post-install/python-rackspace-cloudfiles::
	mv debian/python-rackspace-cloudfiles/usr/share/doc/python-rackspace-cloudfiles/docs \
	debian/python-rackspace-cloudfiles/usr/share/doc/python-rackspace-cloudfiles/html

build/python-rackspace-cloudfiles:: test-stamp

test-stamp:
	nosetests $(CURDIR)/tests
	touch test-stamp

clean::
	rm -f test-stamp tests/cloudfiles
